.page-header
  = link_to new_user_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New User
  %h1 Listing users

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Username
        %th Full name
        %th Twitter name
        %th Github name
        %th Url
        %th Avatar image name
        %th Bio
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.username
          %td= user.full_name
          %td= user.twitter_name
          %td= user.github_name
          %td= user.url
          %td= user.avatar_image_name
          %td= user.bio
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user, :data => { confirm: 'Are you sure?' }, :method => :delete
