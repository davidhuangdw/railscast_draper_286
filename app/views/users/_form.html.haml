= form_for @user, :html => { :class => "form-horizontal" } do |f|
  -if @user.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :username, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :username, :class => 'form-control'
  .form-group
    = f.label :full_name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :full_name, :class => 'form-control'
  .form-group
    = f.label :twitter_name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :twitter_name, :class => 'form-control'
  .form-group
    = f.label :github_name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :github_name, :class => 'form-control'
  .form-group
    = f.label :url, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :url, :class => 'form-control'
  .form-group
    = f.label :avatar_image_name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :avatar_image_name, :class => 'form-control'
  .form-group
    = f.label :bio, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :bio, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
